@model ProyectoFinalWeb.Entities.ArticuloEnt

@{
    ViewBag.Title = "AgregarArticulo";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth px-0">
            <div class="row w-100 mx-0">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left py-5 px-4 px-sm-5" style="background-color: #f8f9fa; border-radius: 8px;">
                        <h4>Agregar Artículo</h4>

                        @using (Html.BeginForm("AgregarArticulo", "Home", FormMethod.Post, new { @class = "pt-3" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-group">
                                @Html.Label("Código del Artículo")
                                @Html.TextBoxFor(m => m.Codigo, new
                                {
                                    @class = "form-control form-control-lg",
                                    @placeholder = "Código",
                                    @required = true,
                                })
                            </div>
                            <div class="form-group">
                                @Html.Label("Nombre del Artículo")
                                @Html.TextBoxFor(m => m.Nombre, new
                                {
                                    @class = "form-control form-control-lg",
                                    @placeholder = "Nombre",
                                    @required = true,
                                    @type = "text",
                                })
                            </div>
                            <div class="form-group">
                                @Html.Label("Precio")
                                @Html.TextBoxFor(m => m.Precio, new
                                {
                                    @class = "form-control form-control-lg",
                                    @placeholder = "Precio",
                                    @required = true,
                                    @type = "number",
                                    @step = "0.01"
                                })
                            </div>
                            <div class="form-group">
                                @Html.CheckBoxFor(m => m.AplicaIVA, new { @class = "form-check-input" })
                                <label for="AplicaIVA" class="form-check-label">¿Aplica IVA?</label>
                            </div>

                            <div class="mt-3">
                                <input type="submit" id="btnAgregar" value="Agregar" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


