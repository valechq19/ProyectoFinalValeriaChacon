
@using ProyectoFinalWeb.Entities


@model ProyectoFinalWeb.Entities.UsuariosEnt

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center justify-content-center" style="height: 100vh;">
            <div class="row w-100 mx-0">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left py-5 px-4 px-sm-5" style="background-color: #f8f9fa; border-radius: 10px; padding: 20px;">
                        <h4 class="text-center">Ingrese sus datos</h4>

                        @using (Html.BeginForm("ConsultarProductos", "Home", FormMethod.Post, new { @class = "pt-3" }))
                        {
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.usuario, new
                                {
                                    @class = "form-control form-control-lg",
                                    @placeholder = "Usuario",
                                    @required = true
                                })
                            </div>

                            <div class="form-group">
                                @Html.PasswordFor(m => m.Contrasena, new
                                {
                                    @class = "form-control form-control-lg",
                                    @placeholder = "Clave",
                                    @required = true
                                })
                            </div>

                            <div class="mt-3">
                                <div class="row">
                                    <div class="col-3"></div>
                                    <div class="col-6">
                                        <br>
                                        <input type="submit" id="btnIniciarSesion" value="Iniciar Sesión" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">
                                        <br><br>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/FuncionesJS/ValidarUsuario.js"></script>
