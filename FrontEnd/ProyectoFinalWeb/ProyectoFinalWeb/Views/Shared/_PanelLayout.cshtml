<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title></title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta content="Free HTML Templates" name="keywords" />
    <meta content="Free HTML Templates" name="description" />
    @Styles.Render("~/Content/style.css")
    @Styles.Render("~/Content/bootstrap.min.css")

    <link href="img/favicon.ico" rel="icon" />
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins&family=Roboto:wght@700&display=swap"
          rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css"
          rel="stylesheet" />
    <link href="lib/flaticon/font/flaticon.css" rel="stylesheet" />

    @Styles.Render("~/lib/flaticon/font/flaticon.css")

</head>
<nav class="navbar navbar-expand-lg bg-white navbar-light shadow-sm py-3 py-lg-0 px-3 px-lg-0">
    <a href="@Url.Action("Index", "Home")" class="navbar-brand ms-lg-5">
        <h1 class="m-0 text-uppercase text-dark">Artículos</h1>
    </a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarCollapse">
        <div class="navbar-nav ms-auto py-0 d-flex align-items-center">
           
            @using (Html.BeginForm("ConsultarProductos", "Home", FormMethod.Post, new { @class = "d-inline" }))
            {
                @Html.Hidden("id", Session["id"])
                @Html.Hidden("usuario", Session["usuario"])
                @Html.Hidden("contrasena", Session["contrasena"])
                @Html.Hidden("Token", Session["Token"])

                <button type="submit" class="btn btn-success me-3">Volver</button> <!-- me-3 para margen a la derecha -->
            }

           
            <a href="@Url.Action("CerrarSesion", "Home")" class="nav-item nav-link nav-contact">
                <button class="btn btn-success">Cerrar Sesión <i class="bi bi-arrow-right"></i></button>
            </a>
        </div>
    </div>
</nav>



@RenderBody()

</html>


